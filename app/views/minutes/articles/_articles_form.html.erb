<%= form_with(model: minute) do |f| %>
  <div data-controller="nested-form">
    <h4>Artículos a agregar:</h4>
    <div class="level1">
      <template id="template1">
        <%= f.fields_for :articles, Article.new, child_index: "TEMPLATE_RECORD" do |article| %>
          <%= render "minutes/articles/articles_fields", f: article, minute: minute %>
        <% end %>
      </template>
      <%= link_to "#", data: { action: "nested-form#add_association", level: "1" }, class: "btn btn-sm btn-primary" do %>
        <i class="bi bi-plus"></i>
        Agregar artículo
      <% end %>
      <section class="childrenContainer row"></section>
    </div>
  </div>
  <div class="row pt-4">
    <div class="col text-center">
      <%= button_tag(:class => "btn btn-primary") do %>
        <i class="bi bi-check-lg"></i>
        Guardar
      <% end %>
    </div>
  </div>
<% end %>
