<div class="nested-fields">
  <div class="row">
    <%= f.hidden_field :_destroy %>
    <% f.hidden_field :minute_id, value: minute.id %>
  </div>
  <div class="row">
    <div class="col-2">
      <%= f.label :code, "Número de artículo", style: "display: block" %>
    </div>
    <div class="col-2">
      <%= f.text_field :code, class: "form-control" %>
    </div>
    <div class="col-1">
      <%= f.label :project_id, "Proyecto", style: "display: block" %>
    </div>
    <div class="col-4">
      <%= f.select :project_id, options_for_select(@projects.all.map { |project| [project.finalCode + " - " + project.name, project.id] }), {}, class: "form-select" %>
    </div>
    <div class="level2 col-3">
      <template id="template2">
        <%= f.fields_for :agreements, Agreement.new, child_index: "TEMPLATE_AGREEMENT" do |agreement| %>
          <%= render "minutes/agreements/agreements_fields", f: agreement, article: f %>
        <% end %>
      </template>
      <div class="btn-group">
        <%= link_to "#", data: { action: "click->nested-form#remove_association" }, class: "btn btn-sm btn-danger" do %>
          <i class="bi bi-trash"></i>
        <% end %>
        <%= link_to "#", data: { action: "nested-form#add_association", level: "2" }, class: "btn btn-sm btn-primary" do %>
          <i class="bi bi-plus"></i>
          Agregar acuerdo
        <% end %>
      </div>
    </div>
    <section class="childrenContainer row"></section>
  </div>
</div>
