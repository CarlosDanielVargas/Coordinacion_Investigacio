<div class="nested-fields">
  <div class="row mt-4 ms-1">
    <div class="col-2">
      <%= f.label :code, "Número de acuerdo", style: "display: block" %>
    </div>
    <div class="col-2">
      <%= f.text_field :code, class: "form-control" %>
    </div>
    <div class="col-1">
      <%= f.label :description, "Descripción", style: "display: block" %>
    </div>
    <div class="col-2">
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="col-3 btn-group">
      <%= link_to_remove_association f, class: "btn btn-danger" do %>
        <i class="bi bi-trash-fill"></i>
      <% end %>
      <%= link_to_add_association f, :transactions, class: "btn btn-success", data: { association_insertion_node: "#transactions_#{f.object.object_id}", association_insertion_method: :append } do %>
        <i class="bi bi-plus-circle-fill"></i> Agregar transacción
      <% end %>
    </div>
    <div class="row pb-2">
      <div id="transactions_<%= f.object.object_id %>" class="transactions">
        <%= f.fields_for :transactions do |transaction| %>
          <%= render "transaction_fields", f: transaction, minute: minute %>
        <% end %>
      </div>
    </div>
  </div>
</div>