<div class="container">
  <p style="color: green"><%= notice %></p>

  <div class="row mt-4 mb-4">
    <div class="col-md-12">
      <h1 class="text-center">Actas</h1>
    </div>
  </div>

  <div class="mt-4 mb-4">
    <div id="filter-form">
      <%= render 'minute_filters' %>
    </div>
  </div>

  <div id="minutes">
    <table class="table table-hover text-center">
      <thead>
      <tr>
        <th>Fecha de creación</th>
        <th>Nº Acta</th>
        <th>Nº Proyecto</th>
        <th>Proyecto</th>
        <th>Investigadores</th>
        <th>Acciones</th>
      </tr>
      </thead>
      <tbody>
      <% @minutes.each do |minute| %>
        <% minute.projects.each do |project| %>
          <tr>
            <td><%= minute.creation_date.strftime("%d/%m/%y") %></td>
            <td><%= minute.number %></td>
            <td><%= project.finalCode %></td>
            <td><%= project.name %></td>
            <td>
              <% project.individuals.each do |investigator| %>
                <%= investigator.last_name %> <%= investigator.first_name %> <br>
              <% end %>
            </td>
            <td>
              <%= link_to edit_minute_path(minute), class: "btn btn-primary" do %>
                <i class="bi bi-pencil-fill"></i> Ver
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New minute", new_minute_path %>
</div>

