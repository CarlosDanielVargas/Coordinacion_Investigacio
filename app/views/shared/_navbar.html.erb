<header>
    <div class="header">
        <div class="header__container container">
            <div class="header__logos">
                <%= image_tag('ucr_logo.svg', alt: 'Logo UCR', class: 'header__logo') %>
                <%= image_tag('so-ci_logo.svg', alt: 'Logo SO-CI', class: 'header__logo') %>
            </div>

            <div class="header__actions">
                <% if current_user %>
                    <%= link_to "CERRAR SESIÃ“N", destroy_user_session_path, class:"btn__primary fw-bold w-100", data: { turbo_method: :delete } %>
                <% end %>
            </div>
        </div>
    </div>

    <% if current_user %>
      <div class="navbar">
        <div class="navbar__container container">
            <div class="navbar-expand-lg">
                <div class="navbar__header">
                    <%= link_to '#', class: "navbar-brand navbar__toggler", id: "logo", rel: "prev" do %>
                        <i class="bi bi-person"></i>&nbsp;
                        <%= current_user.name %>
                    <% end %>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <%= image_tag('menu.svg', alt: "menu", class: "navbar__menu-logo") %>
                    </button>
                </div>

                <div class="navbar__collapse collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <%= link_to "Inicio", root_path, class:"nav-link" %>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Proyectos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <%= link_to new_project_path, class:"dropdown-item" do %>
                                    <i class="bi bi-journal-plus"></i>
                                    Agregar nuevo proyecto
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to projects_path, class:"dropdown-item" do %>
                                    <i class="bi bi-journal"></i>
                                    Listar proyectos
                                    <% end %>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Investigadores
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <%= link_to new_individual_path, class:"dropdown-item" do %>
                                    <i class="bi bi-person-plus"></i>
                                    <span>Agregar nuevo investigador</span>
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to individuals_path, class:"dropdown-item" do %>
                                    <i class="bi bi-person"></i>
                                    <span>Listar investigadores</span>
                                    <% end %>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Actas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <%= link_to new_minute_path, class:"dropdown-item" do %>
                                    <i class="bi bi-person-plus"></i>
                                    <span>Agregar nueva acta</span>
                                    <% end %>
                                </li>
                                <li>
                                    <%= link_to minutes_path, class:"dropdown-item" do %>
                                    <i class="bi bi-person"></i>
                                    <span>Listar actas</span>
                                    <% end %>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item mb-3">
                            <%= link_to "CERRAR SESION", destroy_user_session_path, class:"nav-link btn__primary nav-link--logout", data: { turbo_method: :delete } %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
      </div>
    <% end %>
</header>