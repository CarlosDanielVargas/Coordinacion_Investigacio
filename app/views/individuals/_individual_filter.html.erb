<%= search_form_for @q, url: search_individuals_path, data: { turbo: false } do |f| %>

  <div class="main__filters-form main__filters-grid--5">
    <div class="main__filters-field">
      <%= f.label :first_name, 'Nombre', class: "main__filters-label" %>
      <%= f.text_field :first_name_cont, class: "form-control main__filters-input", placeholder: "Nombre"  %>
    </div>
    <div class="main__filters-field">
      <%= f.label :last_name, 'Apellidos', class: "main__filters-label" %>
      <%= f.text_field :last_name_cont, class: "form-control main__filters-input", placeholder: "Apellidos"  %>
    </div>
    <div class="main__filters-field">
      <%= f.label :email, 'Email', class: "main__filters-label" %>
      <%= f.text_field :email_cont, class: "form-control main__filters-input", placeholder: "Email"  %>
    </div>
    <div class="main__filters-field">
      <%= f.label :id_card, 'N° Identificiación', class: "main__filters-label"  %>
      <%= f.text_field :id_card_start, class: "form-control main__filters-input", placeholder: "N° Identificiación" %>
    </div>
    <div class="main__filters-field">
      <%= f.label :id_card, 'Tipo', class: "main__filters-label" %>
      <%= f.select :individual_type_eq, options_for_select(Individual.individual_types.keys.map { |key| [key.capitalize, key] }), { prompt: "- Seleccione una opción -" }, class: "form-select main__filters-input" %>
    </div>
  </div>

  <div class="action main__filters-action text-end">
    <button type="submit" class="btn__secondary px-3 py-2">
        <i class="bi bi-search me-1"></i>
        Buscar
    </button>
  </div>
<% end %>
