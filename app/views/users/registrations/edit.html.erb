<main class="main container">
  <div class="main__body">
    <h1 class="main__title main__title--upsert">EDITAR CUENTA</h1>

    <div class="main__form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <h3 class="main__body-subtitle my-rg"><i class="bi bi-person-fill"></i> DATOS DEL USUARIO</h3>

        <div class="grid-2">
          <div class="form__field">
            <%= f.label "Nombre completo", class: "form__label" %>
            <%= f.text_field :name, class: "form-control form__input", readonly: true %>
          </div>
          
          <div class="form__field">
            <%= f.label "Número de idenficación", class: "form__label" %>
            <%= f.text_field :id_card, class: "form-control form__input", readonly: true %>
          </div>
          
          <div class="form__field">
            <%= f.label "Número telefónico", class: "form__label" %>
            <%= f.text_field :phone, class: "form-control form__input", readonly: true %>
          </div>
          
          <div class="form__field">
            <%= f.label "Correo electrónico", class: "form__label" %>
            <%= f.email_field :email, class: "form-control form__input", readonly: true %>
          </div>
        </div>

        <h3 class="main__body-subtitle my-rg"><i class="bi bi-lock-fill"></i> CAMBIO DE CONTRASEÑA</h3>
        <i class="fst-italic text-muted fs-sm" style="margin: -20px 0 10px 0;">(Deja los siguientes campos en blanco si no deseas cambiar la contraseña)</i>

        <div class="grid-3 grid-3--desktop mb-2">
          <div class="form__field">
            <%= f.label "Nueva contraseña", class: "form__label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form__input", placeholder: "Nueva contraseña" %>
          </div>
          
          <div class="form__field">
            <%= f.label "Confirmar contraseña", class: "form__label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form__input", placeholder: "Confirmar contraseña" %>
          </div>
          
          <div class="form__field">
            <%= f.label "Contraseña actual", class: "form__label" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form__input", placeholder: "Contraseña actual" %>
          </div>
        </div>

        <div class="form__actions">
          <%= button_tag "Actualizar", class: "btn__primary" %>
        </div>
      <% end %>
    </div>
  </div>
</main>